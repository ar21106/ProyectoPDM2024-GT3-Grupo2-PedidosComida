<resources>
    <!-- Base application theme. -->
    <style name="Theme.PedidosApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primarioRojo</item>
        <item name="colorPrimaryVariant">@color/primarioRojo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundarioNaranja</item>
        <item name="colorSecondaryVariant">@color/secundarioNaranja</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PedidosApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PedidosApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PedidosApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>